import React, { useEffect, useState } from 'react';
import { useTranslation } from 'react-i18next';
import { useNavigate } from 'react-router-dom';
import Banner from '../components/ui/Banner';
import { getProjects } from '../services/api';
import { FolderKanban } from 'lucide-react';

const Projects = () => {
  const bannerImage = "/foret-gabonaise-4.jpg.jpg";
  const { t, i18n } = useTranslation();
  const navigate = useNavigate();
  const [projects, setProjects] = useState([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    loadProjects();
  }, [i18n.language]);

  const loadProjects = async () => {
    try {
      const response = await getProjects({ lang: i18n.language, limit: 20 });
      setProjects(response.data.projects);
    } catch (error) {
      console.error('Error loading projects:', error);
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="pt-20">
      <Banner 
        title="Projets et Programmes" 
        subtitle="Nos initiatives pour l'économie verte au Gabon"
        backgroundImage={bannerImage}
      />

      <section className="py-16 bg-white">
        <div className="container-custom">
          {loading ? (
            <p className="text-center">Chargement...</p>
          ) : projects.length === 0 ? (
            <div className="text-center py-12">
              <FolderKanban size={64} className="mx-auto text-gray-400 mb-4" />
              <p className="text-gray-600">Aucun projet pour le moment</p>
            </div>
          ) : (
            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {projects.map((item) => (
                <div 
                  key={item.id} 
                  onClick={() => navigate(`/projets-programmes/${item.slug}`)}
                  className="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow cursor-pointer"
                >
                  {item.cover_image_url && (
                    <img 
                      src={item.cover_image_url} 
                      alt={item.title}
                      className="w-full h-48 object-cover"
                    />
                  )}
                  <div className="p-6">
                    <div className="flex items-center justify-between mb-3">
                      <span className="px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm capitalize">
                        {item.status}
                      </span>
                    </div>
                    <h3 className="text-xl font-bold text-blue-black mb-3">
                      {item.title}
                    </h3>
                    {item.description && (
                      <p className="text-gray-600 mb-4">
                        {item.description}
                      </p>
                    )}
                    <span className="text-green-medium hover:text-green-forest font-semibold">
                      En savoir plus →
                    </span>
                  </div>
                </div>
              ))}
            </div>
          )}
        </div>
      </section>
    </div>
  );
};

export default Projects;